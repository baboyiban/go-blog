# MySQL 서버 설정 파일 (my.cnf)
# 이 파일은 MySQL 서버의 동작 방식을 제어합니다.

[mysqld]
# 동시에 허용할 수 있는 최대 연결 수를 설정합니다.
# 기본값은 보통 151이며, 서버의 리소스에 따라 조정해야 합니다.
max_connections = 200

# InnoDB 스토리지 엔진이 사용할 수 있는 메모리 버퍼 풀의 크기를 설정합니다.
# 이 버퍼 풀은 데이터와 인덱스를 캐시하는 데 사용됩니다.
# 서버 메모리의 50-70%를 할당하는 것이 일반적입니다.
innodb_buffer_pool_size = 1G

# InnoDB 로그 파일의 크기를 설정합니다.
# 이 값은 트랜잭션 로그의 크기를 결정하며, 큰 트랜잭션을 처리할 때 유용합니다.
# 일반적으로 256M ~ 1G 사이로 설정합니다.
innodb_log_file_size = 256M

# 트랜잭션 커밋 시 로그를 디스크에 동기화하는 방식을 설정합니다.
# 1: 가장 안전한 설정 (트랜잭션 커밋 시마다 로그를 디스크에 동기화)
# 2: 약간의 데이터 손실 위험이 있지만 성능이 향상됨
# 0: 가장 빠르지만, 데이터 손실 위험이 큼
innodb_flush_log_at_trx_commit = 1

# 쿼리 캐시의 크기를 설정합니다.
# 쿼리 캐시는 동일한 쿼리의 결과를 저장하여 성능을 향상시킵니다.
# MySQL 8.0부터는 쿼리 캐시가 제거되었으므로, 이 설정은 MySQL 5.x에서만 유효합니다.
query_cache_size = 64M

# 쿼리 캐시를 활성화할지 여부를 설정합니다.
# 1: 쿼리 캐시 활성화
# 0: 쿼리 캐시 비활성화
query_cache_type = 1

# 임시 테이블의 최대 크기를 설정합니다.
# 이 값을 초과하는 임시 테이블은 디스크에 저장됩니다.
tmp_table_size = 64M

# 메모리 기반 테이블의 최대 크기를 설정합니다.
# 이 값은 tmp_table_size와 동일하게 설정하는 것이 일반적입니다.
max_heap_table_size = 64M
